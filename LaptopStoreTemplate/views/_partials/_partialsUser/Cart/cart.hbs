<div class="cart_section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart_container">
                    <div class="cart_title">Your Shopping Cart</div>
                    <div class="cart_items">
                        <ul class="cart_list">
                            <li class="cart_item clearfix">
                                <div class="row">
                                        <div class="cart_item_name cart_info_col col-md-1">
                                            <div class="cart_item_title">Image</div>
                                        </div>
                                        <div class="cart_item_name cart_info_col col-md-4">
                                            <div class="cart_item_title">Name</div>
                                        </div>
                                        <div class="cart_item_quantity cart_info_col col-md-1">
                                            <div class="cart_item_title" style="left: -104px">Quantity</div>
                                        </div>
                                        <div class="cart_item_price cart_info_col col-md-1">
                                            <div class="cart_item_title"  style="left: -36px">Price</div>
                                        </div>
                                        <div class="cart_item_total cart_info_col col-md-1">
                                            <div class="cart_item_title" style="left: 40px">Total</div>
                                        </div>
                                        <div class="cart_info_col col-md-1">
                                            <div class="cart_item_title " style="left: 80px">Delete</div>
                                        </div>
                                </div>
                            </li>
                            {{#each items}}

                                <li class="cart_item clearfix">
                                    <div class="row">

                                            <div class="cart_item_image col-md-1">
                                                <img src="/images_product/{{Product.ProID}}/{{Product.ProID}}.jpg" alt="">
                                            </div>

                                            <div class="cart_item_name cart_info_col col-md-4">
                                                <div class="cart_item_text">{{Product.ProName}}</div>
                                            </div>
                                            <div class="cart_item_quantity cart_info_col col-md-1">
                                                <div class="cart_item_text">{{Quantity}}</div>
                                            </div>
                                            <div class="cart_item_price cart_info_col col-md-2">
                                                <div class="cart_item_text">{{number_format Product.Price}}</div>
                                            </div>
                                            <div class="cart_item_total cart_info_col col-md-2">
                                                <div class="cart_item_text">{{number_format Amount}}</div>
                                            </div>
                                        <form id="frmRemoveItem" method="POST" action="/cart/remove">
                                            <input id="txtProId_R" name="ProID" type="hidden" value="{{ProID}}">
                                            <div class="cart_info_col col-md-1">
                                                <div class="product_extras">
                                                    <button class="product_cart_button"><i class="far fa-trash-alt"></i></button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </li>
                            {{/each}}
                        </ul>
                    </div>

                    <!-- Order Total -->
                    <div class="order_total">
                        <div class="order_total_content text-md-right">
                            <div class="order_total_title">Order Total:</div>
                            <div class="order_total_amount">{{number_format totalAmount}}</div>
                        </div>
                    </div>

                    <div class="cart_buttons">
                        <button type="button"  onclick="javascript:location.href='/shop'" class="button cart_button_clear">Go Shop</button>
                        <button type="button" class="button cart_button_checkout" onclick="javascript:location.href='/payment/{{totalAmount}}'">Payment</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>