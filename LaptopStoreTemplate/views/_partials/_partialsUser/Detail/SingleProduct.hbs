<!-- Single Product -->

<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    <li data-image="/images_product/{{product.ProID}}/{{product.ProID}}.jpg"><img src="/images_product/{{product.ProID}}/{{product.ProID}}.jpg" alt=""></li>
                    <li data-image="/images_product/{{product.ProID}}/{{product.ProID}}.jpg"><img src="/images_product/{{product.ProID}}/{{product.ProID}}.jpg" alt=""></li>
                    <li data-image="/images_product/{{product.ProID}}/{{product.ProID}}.jpg"><img src="/images_product/{{product.ProID}}/{{product.ProID}}.jpg" alt=""></li>
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected"><img src="/images_product/{{product.ProID}}/{{product.ProID}}.jpg" alt=""></div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category">{{product.Fatory}}</div>
                    <div class="product_name">{{product.ProName}}</div>
                    <div class="product_overview">
							<span class="rating_r rating_r_4 product_rating">
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
							</span>
                        <p>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;</p>
                        <span>
								<i class="fas fa-eye"><p>&nbsp;&nbsp;{{product.Views}}</p></i>
							</span>
                        <p>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;</p>
                        <span>
								<p><b>Quantity: {{product.Quantity}} Products</b></p>
							</span>
                        <hr>
                    </div>

                    <div class="product_highlight">
                        <h5>Highlights</h5>
                        <ul type="circle">
                            {{{product.Detail}}}
                        </ul>
                        <span>
							<i class="fas fa-angle-right">&nbsp;<a href="#">See more product details</a></i>
						</span>
                    </div>

                </div>
                <div class="product_description product_text">
                    <h5>About this product</h5>
                    <p>
                        {{product.Overview}}
                        <a href="#">See more.</a>
                    </p>
                </div>
                <div class="order_info d-flex flex-row">
                    <form method="post" action="/cart/add">
                        <div class="clearfix" style="z-index: 1000;">
                            <input name="proId" type="hidden" value="{{product.ProID}}">
                            <!-- Product Quantity -->
                            <div class="product_quantity clearfix">
                                <span>Quantity: </span>
                                <input name="quantity" id="quantity_input" type="text" pattern="[0-9]*" value="1">
                                <div class="quantity_buttons">
                                    <div id="quantity_inc_button" class="quantity_inc quantity_control"><i class="fas fa-chevron-up"></i></div>
                                    <div id="quantity_dec_button" class="quantity_dec quantity_control"><i class="fas fa-chevron-down"></i></div>
                                </div>
                            </div>
                            <!-- Product Color -->
                            <div class="product_color">

                                    <span>{{number_format product.Price}}</span>

                            </div>
                        </div>

                        <div class="button_container">
                            <button type="submit" class="button cart_button">Add to Cart</button>
                            <div class="product_fav"><i class="fas fa-heart"></i></div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>