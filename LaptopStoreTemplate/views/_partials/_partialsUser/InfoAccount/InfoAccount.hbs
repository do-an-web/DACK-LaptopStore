<div class="container">
    <div class="row profile">
        <div class="col-md-3" style="background-color: #9898b9">
            <div class="profile-sidebar">
                <div class="profile-userpic">
                    <img src="/assets/account.png" alt="">
                </div>
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        {{layoutVM.curUser.f_Username}}
                    </div>
                    <div class="profile-usertitle-job">
                        {{layoutVM.curUser.f_Name}}
                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                <div class="profile-userbuttons">
                    <button type="button" class="btn btn-success btn-sm">Follow</button>
                    <button type="button" class="btn btn-danger btn-sm">Message</button>
                </div>
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li id="nav-element1">
                            <a class="tablinks" href="#" onclick="OpenTabs(event,'Overview')">
                                <i class="fa fa-home" aria-hidden="true"></i></i>
                                Overview </a>
                        </li>
                        <li id="nav-element2" class="nav-element active">
                            <a class="tablinks" href="/user/profile" onclick="OpenTabs(event,'Information')">
                                <i class="fa fa-user-circle" aria-hidden="true"></i></i>
                                Account Information </a>
                        </li>
                        <li id="nav-element3" >
                            <a class="tablinks" href="/user/history" onclick="OpenTabs(event,'Histories')">
                                <i class="fa fa-list-alt" aria-hidden="true"></i></i>
                                Histories </a>
                        </li>
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>
        <div id="Overview" class="col-md-9 tabcontent" style="display: none">
            <div class="profile-content">
                Overview Account
            </div>
        </div>
        <div id="Information" class="col-md-9 tabcontent" style="display: block">
            <div class="profile-content">
                <h3 style="font-weight:lighter;">Account infomations</h3>
                <br>
                {{{notify}}}
            <form action = "/user/edit" method = "POST">
            <div >
                {{#if layoutVM.isLogged}}
                    <div class="form-group">

                        <label class="person-info">
                            Personal
                        </label>
                        <hr style="margin-top: 0;">

                        <div class="row">
                            <div class="col-12">
                                <div class="col-3">
                                    Full Name
                                </div>
                                <div class="col-9">
                                    <input type="text" id="txtName" class="form-control" value="{{layoutVM.curUser.f_Name}}" name="name">
                                </div>

                            </div>

                        </div>
                        <br>

                        <div class="row">

                            <div class="col-12">
                                <div class="col-3">
                                    Birthday
                                </div>

                                <div class="col-9">
                                    <!-- <input type="date" class="form-control" placeholder={{layoutVM.curUser.f_DOB}} style="color: #555;"> -->
                                    <input type="text" class="form-control" value={{birth}} name="dob">

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="col-3">Email</div>
                            <div class="col-9">
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value= {{layoutVM.curUser.f_Email}}  name="email">
                            </div>
                        </div>

                    </div>

                    <br>
                    <div class="form-group row">

                        <button type="submit" class="btn btn-primary" style="margin-left: 30px;">Update</button>

                    </div>
                </div>
                </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>
<br>
